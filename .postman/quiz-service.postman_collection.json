{
  "info": {
    "name": "AI Quiz Microservice",
    "description": "Complete API collection for the AI Quiz Microservice",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "jwt",
      "value": "",
      "type": "string"
    },
    {
      "key": "quiz_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "question_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "submission_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Checks",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/healthz",
              "host": ["{{base_url}}"],
              "path": ["healthz"]
            }
          }
        },
        {
          "name": "Readiness Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/readyz",
              "host": ["{{base_url}}"],
              "path": ["readyz"]
            }
          }
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (responseCode.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt', response.access_token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"demo_user\",\n  \"password\": \"demo_password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Quiz Management",
      "item": [
        {
          "name": "Create Quiz",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (responseCode.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('quiz_id', response.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"subject\": \"Mathematics\",\n  \"grade_level\": \"8\",\n  \"num_questions\": 5,\n  \"difficulty\": \"medium\",\n  \"topics\": [\"algebra\", \"geometry\"],\n  \"question_types\": [\"MCQ\", \"TF\", \"short_answer\"],\n  \"standard\": \"Common Core\",\n  \"adaptive\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/quizzes",
              "host": ["{{base_url}}"],
              "path": ["quizzes"]
            }
          }
        },
        {
          "name": "Get Quiz",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/quizzes/{{quiz_id}}",
              "host": ["{{base_url}}"],
              "path": ["quizzes", "{{quiz_id}}"]
            }
          }
        },
        {
          "name": "Get Quiz Questions",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (responseCode.code === 200) {",
                  "    const questions = pm.response.json();",
                  "    if (questions.length > 0) {",
                  "        pm.collectionVariables.set('question_id', questions[0].id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/quizzes/{{quiz_id}}/questions",
              "host": ["{{base_url}}"],
              "path": ["quizzes", "{{quiz_id}}", "questions"]
            }
          }
        },
        {
          "name": "Submit Quiz",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (responseCode.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('submission_id', response.submission_id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"answers\": [\n    {\n      \"question_id\": {{question_id}},\n      \"selected_option\": \"Option A\",\n      \"time_spent_seconds\": 30\n    }\n  ],\n  \"time_taken_minutes\": 15\n}"
            },
            "url": {
              "raw": "{{base_url}}/quizzes/{{quiz_id}}/submit",
              "host": ["{{base_url}}"],
              "path": ["quizzes", "{{quiz_id}}", "submit"]
            }
          }
        },
        {
          "name": "Retry Quiz",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"Want to improve my score\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/quizzes/{{quiz_id}}/retry",
              "host": ["{{base_url}}"],
              "path": ["quizzes", "{{quiz_id}}", "retry"]
            }
          }
        }
      ]
    },
    {
      "name": "Hints",
      "item": [
        {
          "name": "Get Hint",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": {
              "raw": "{{base_url}}/quizzes/{{quiz_id}}/questions/{{question_id}}/hint",
              "host": ["{{base_url}}"],
              "path": ["quizzes", "{{quiz_id}}", "questions", "{{question_id}}", "hint"]
            }
          }
        }
      ]
    },
    {
      "name": "Adaptive Quiz",
      "item": [
        {
          "name": "Create Adaptive Quiz",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (responseCode.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('quiz_id', response.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"subject\": \"Science\",\n  \"grade_level\": \"10\",\n  \"num_questions\": 8,\n  \"difficulty\": \"adaptive\",\n  \"topics\": [\"physics\", \"chemistry\"],\n  \"question_types\": [\"MCQ\", \"TF\"],\n  \"adaptive\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/quizzes",
              "host": ["{{base_url}}"],
              "path": ["quizzes"]
            }
          }
        },
        {
          "name": "Get Next Question",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": {
              "raw": "{{base_url}}/quizzes/{{quiz_id}}/next",
              "host": ["{{base_url}}"],
              "path": ["quizzes", "{{quiz_id}}", "next"]
            }
          }
        },
        {
          "name": "Get Adaptive Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/quizzes/{{quiz_id}}/adaptive-status",
              "host": ["{{base_url}}"],
              "path": ["quizzes", "{{quiz_id}}", "adaptive-status"]
            }
          }
        }
      ]
    },
    {
      "name": "History",
      "item": [
        {
          "name": "Get History (All)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/quizzes/history",
              "host": ["{{base_url}}"],
              "path": ["quizzes", "history"]
            }
          }
        },
        {
          "name": "Get History (Filtered)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/quizzes/history?subject=Mathematics&grade=8&min_marks=60&limit=10",
              "host": ["{{base_url}}"],
              "path": ["quizzes", "history"],
              "query": [
                {
                  "key": "subject",
                  "value": "Mathematics"
                },
                {
                  "key": "grade",
                  "value": "8"
                },
                {
                  "key": "min_marks",
                  "value": "60"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get History (Date Filtered)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/quizzes/history?from_date=01/01/2024&to_date=31/12/2024",
              "host": ["{{base_url}}"],
              "path": ["quizzes", "history"],
              "query": [
                {
                  "key": "from_date",
                  "value": "01/01/2024"
                },
                {
                  "key": "to_date",
                  "value": "31/12/2024"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
