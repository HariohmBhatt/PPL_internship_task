# AI Quiz Microservice Environment Configuration

# Environment
ENV=production

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_chars
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql+psycopg://username:password@host:port/database
DATABASE_URL_TEST=postgresql+psycopg://username:password@host:port/test_database

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# AI Provider Keys (at least one required)
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600
CACHE_ENABLED=true

# Email Notification Settings
NOTIFICATION_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_USE_TLS=true
NOTIFICATION_FROM_EMAIL=noreply@aiquiz.com

# Rate Limiting
HINT_RATE_LIMIT_PER_USER_QUESTION=3
SUBMISSION_RATE_LIMIT_PER_QUIZ=10

# Logging
LOG_LEVEL=INFO

# Render.com specific configurations (if deploying to Render)
PORT=8000
